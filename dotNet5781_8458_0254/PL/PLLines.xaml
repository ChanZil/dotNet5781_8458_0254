<Window x:Class="PL.PLLines"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="PLLines" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgStationInLIne" Height="327" Margin="58,43,0,0" VerticalAlignment="Top" Width="399" HorizontalAlignment="Left" FlowDirection="RightToLeft" SelectionChanged="dgStationInLIne_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="קוד תחנה" Binding ="{Binding Code}"/>
                <DataGridTextColumn Header="שם תחנה" Binding ="{Binding Name}"/>
                <DataGridTextColumn Header="כתובת" Binding ="{Binding Address}"/>
            </DataGrid.Columns>
        </DataGrid>
        <ListBox x:Name="lbLines" HorizontalAlignment="Left" Height="327" Margin="563,43,0,0" VerticalAlignment="Top" Width="172" SelectionChanged="lbLines_SelectionChanged"/>
    </Grid>
</Window>
